{
  "version": 2,
  "functions": {
    "server.js": {},
    "api/daily-refresh.js": {},
    "api/initial-sync.js": {},
    "api/send-scheduled-reports.js": {},
    "api/ota-crawler.js": {
      "maxDuration": 800
    }
  },
  "routes": [{ "src": "/(.*)", "dest": "server.js" }],
  "crons": [
    { "path": "/api/daily-refresh", "schedule": "0 4 * * *" },
    { "path": "/api/send-scheduled-reports", "schedule": "0 * * * *" },
    { "path": "/api/ota-crawler", "schedule": "0 5 * * *" }
  ]
}
