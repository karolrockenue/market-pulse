
{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "web/build/**", 
          "api/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-refresh?secret=Overkill123*",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/send-scheduled-reports",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/sync-rockenue-assets",
      "schedule": "0 6 * * *"
    }
  ]
}