{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    },
    "api/ota-crawler.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 800
    }
  },
  "crons": [
    {
      "path": "/api/daily-refresh",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/send-scheduled-reports",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/ota-crawler",
      "schedule": "0 5 * * *"
    }
  ]
}
