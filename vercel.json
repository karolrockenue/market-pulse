{
  "version": 2,
  "functions": {
    "server.js": {
      "runtime": "@vercel/node"
    },
    "api/**/*.js": {
      "runtime": "@vercel/node"
    },
    "api/ota-crawler.js": {
      "maxDuration": 800
    }
  },
  "routes": [
    {
      "src": "/api/daily-refresh",
      "dest": "/api/daily-refresh.js"
    },
    {
      "src": "/api/initial-sync",
      "dest": "/api/initial-sync.js"
    },
    {
      "src": "/api/send-scheduled-reports",
      "dest": "/api/send-scheduled-reports.js"
    },
    {
      "src": "/api/ota-crawler",
      "dest": "/api/ota-crawler.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/daily-refresh",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/send-scheduled-reports",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/ota-crawler",
      "schedule": "0 5 * * *"
    }
  ]
}
