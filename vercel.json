{
  "version": 2,
  "functions": {
    "api/ota-crawler.js": {
      "maxDuration": 300
    },
    "api/ota-crawler-manager.js": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/ota-crawler",
      "dest": "api/ota-crawler.js"
    },
    {
      "src": "/api/ota-crawler-manager",
      "dest": "api/ota-crawler-manager.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/daily-refresh",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/send-scheduled-reports",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/ota-crawler-manager?secret=${CRAWLER_SECRET}",
      "schedule": "0 5 * * *"
    }
  ]
}
