{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "server.js": { "runtime": "nodejs20.x" },
    "api/daily-refresh.js": { "runtime": "nodejs20.x" },
    "api/initial-sync.js": { "runtime": "nodejs20.x" },
    "api/send-scheduled-reports.js": { "runtime": "nodejs20.x" },
    "api/ota-crawler.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/api/daily-refresh", "dest": "/api/daily-refresh.js" },
    { "src": "/api/initial-sync", "dest": "/api/initial-sync.js" },
    {
      "src": "/api/send-scheduled-reports",
      "dest": "/api/send-scheduled-reports.js"
    },
    { "src": "/api/ota-crawler", "dest": "/api/ota-crawler.js" },
    { "src": "/(.*)", "dest": "server.js" }
  ],
  "crons": [
    { "path": "/api/daily-refresh", "schedule": "0 4 * * *" },
    { "path": "/api/send-scheduled-reports", "schedule": "0 * * * *" },
    { "path": "/api/ota-crawler", "schedule": "0 5 * * *" }
  ]
}
